<body>
    <div class="container justify-content-center">
        <div class="row d-flex">
            <div class=" col-md-12 d-flex">

                <h2 class="text-center">Editar Registro</h2>
                <% crud.forEach(function(details) { %>
                    <form action="/edit/<%= details._id %>" method="POST">
                        <input type="text" value="<%= details.name %>" name="name">
                        <input type="text" value="<%= details.surname %>" name="descricao">
                        <br />
                        <button><a href="/show">Todos</a></button>
                        <button type="submit">Editar</button>
                    </form>
                    <% }) %>
            </div>
        </div>
    </div>
</body>
