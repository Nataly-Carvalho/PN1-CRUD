<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>My CRUD in NodeJS</title>
</head>

<body>
    <h2>Editar Registro</h2>
    <%crud.forEach(function(details) {%>
        <form action="/edit/<%= details._id %>" method="POST">
            <input type="image" value="<%=details.img %>" name="imagem"
            <input type="text" value="<%= details.name %>" name="name">
            <input type="text" value="<%= details.descricao %>" name="descricao">
            <br>
            <button> <a href="/show">Todos</a> </button>
            <button type="submit">Editar</button>
        </form>
        <% }) %>
</body>

</html>